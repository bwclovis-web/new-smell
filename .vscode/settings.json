{
  // Only validate the main schema file, ignore production schema during development
  "files.watcherExclude": {
    "**/prisma/schema.prod.prisma": true
  },
  // Configure Prisma extension to only process the main schema
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "cSpell.words": [
    "gsap",
    "Sillage"
  ]
}
